<script>
  $(document).ready(function() {
  // Getting references to our form and input
  var signUpForm = $("form");
  var emailInput = $("input#email");
  var passwordInput = $("input#password");
  var weightInput = $("input#weight");
  var heightInput = $("input#height");

  // When the signup button is clicked, we validate the email and password are not blank
  signUpForm.on("submit", function(event) {
    event.preventDefault();
    var userData = {
      email: emailInput.val().trim(),
      password: passwordInput.val().trim(),
      height: heightInput.val().trim(),
      weight: weightInput.val().trim(),
    };

    console.log(userData)

    if (!userData.email || !userData.password || !userData.height || !userData.weight) {
      alert("You must fill out each form field")
    }
    // If we have an email and password, run the signUpUser function
    signUpUser(userData.email, userData.password, userData.height, userData.weight);
    emailInput.val("");
    passwordInput.val("");
    weightInput.val("");
    heightInput.val("")
  });

  // Does a post to the signup route. If successful, we are redirected to the members page
  // Otherwise we log any errors
  function signUpUser(email, password, height, weight) {
    $.post("/api/signup", {
      email: email,
      password: password,
      height: height,
      weight: weight
    })
      .then(function(data) {
        window.location.replace("/");
        // If there's an error, handle it by throwing up a bootstrap alert
      })
      .catch(handleLoginErr);
  }

  function handleLoginErr(err) {
    $("#alert .msg").text(err.responseJSON);
    $("#alert").fadeIn(500);
  }
});

</script>